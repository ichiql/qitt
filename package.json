{
  "name": "qitt",
  "version": "0.0.0",
  "description": "tiny function library :)",
  "repository": "https://github.com/ichiql/qitt",
  "author": "Yamashita, Shinichi",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "pnpm dlx npkill",
    "publish:npm": "pnpm lerna publish",
    "p:config": "pnpm -F @qitt/config",
    "p:prettier": "pnpm -F @qitt/prettier",
    "p:numberize": "pnpm -F @qitt/numberize",
    "p:bigintize": "pnpm -F @qitt/bigintize",
    "p:delay": "pnpm -F @qitt/delay",
    "p:error": "pnpm -F @qitt/error",
    "p:is-number": "pnpm -F @qitt/is-number",
    "p:is-string": "pnpm -F @qitt/is-string",
    "p:spin": "pnpm -F @qitt/spin",
    "p:stringify": "pnpm -F @qitt/stringify"
  },
  "engines": {
    "pnpm": ">=8",
    "node": ">=18",
    "npm": "use pnpm!",
    "yarn": "use pnpm!"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@lerna-lite/cli": "^2.4.1",
    "@lerna-lite/publish": "^2.4.1",
    "turbo": "^1.10.3"
  }
}
